{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <h1>Group</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Coords</th>
                <td>{{ group.coords ? group.coords|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ group.country }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ group.comment }}</td>
            </tr>
            <tr>
                <th>Rules</th>
                <td>{{ group.rules }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>{{ group.languages ? group.languages|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ group.logo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_group_index') }}">back to list</a>

    <a href="{{ path('app_group_edit', {'id': group.id}) }}">edit</a>

    {{ include('group/_delete_form.html.twig') }}
{% endblock %}
