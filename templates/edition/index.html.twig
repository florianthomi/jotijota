{% extends 'layout.html.twig' %}

{% block title %}Edition index{% endblock %}

{% block top_title %}
    {{ 'Editions'|trans }}
{% endblock %}

{% block buttons %}
    {{ component('Link', {
        icon: {name: 'icon-plus'},
        label: 'Ajouter une Ã©dition',
        action: path('app_edition_new'),
        class: 'bg-primary text-white'
    }) }}
{% endblock %}


{% block content %}
    <div
            class="block-container"
    >
        <div class="max-w-full overflow-x-auto">
            <table class="w-full table-auto">
                <thead>
                <tr class="bg-gray-2 text-left dark:bg-meta-4">
                    <th
                            class="px-4 py-4 font-medium text-black dark:text-white xl:pl-11"
                    >
                        Nom
                    </th>
                    <th
                            class="px-4 py-4 font-medium text-black dark:text-white"
                    >
                        Du
                    </th>
                    <th
                            class="px-4 py-4 font-medium text-black dark:text-white"
                    >
                        Au
                    </th>
                    <th
                            class="px-4 py-4 font-medium text-black dark:text-white"
                    >
                        Inscriptions
                    </th>
                    <th
                            class="px-4 py-4 font-medium text-black dark:text-white"
                    >
                        Nbre de groupes
                    </th>
                    <th
                            class="px-4 py-4 font-medium text-black dark:text-white"
                    >
                        Nbre de questions
                    </th>
                    <th class="px-4 py-4 font-medium text-black dark:text-white">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td
                                class="border-b border-[#eee] px-4 py-5 pl-9 dark:border-strokedark xl:pl-11"
                        >
                            <h5 class="font-medium text-black dark:text-white">{{ entity.name }}</h5>
                        </td>
                        <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                            <p class="text-black dark:text-white">{{ entity.startAt|date('d.m.Y H:i') }}</p>
                        </td>
                        <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                            <p class="text-black dark:text-white">{{ entity.endAt|date('d.m.Y H:i') }}</p>
                        </td>
                        <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                            <p class="text-black dark:text-white">{{ '%from% - %to%'|replace({
                                    '%from%': entity.subscriptionFrom ? entity.subscriptionFrom|date('d.m.Y H:i:s') : '',
                                    '%to%': entity.subscriptionTo ? entity.subscriptionTo|date('d.m.Y H:i:s') : ''
                                }) }}</p>
                        </td>
                        <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                            <p class="text-black dark:text-white">{{ entity.groups|length }}</p>
                        </td>
                        <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                            <p class="text-black dark:text-white">{{ entity.questions|length }}</p>
                        </td>
                        <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                            <div class="flex items-center space-x-3.5">
                                <a href="{{ path('app_edition_show', {id: entity.id}) }}" class="hover:text-primary">
                                    {{ component('Icon', {name: 'icon-eye'}) }}
                                </a>
                                <a href="{{ path('app_edition_edit', {id: entity.id}) }}" class="hover:text-primary">
                                    {{ component('Icon', {name: 'icon-pencil'}) }}
                                </a>
                                {% include 'edition/_delete_form.html.twig' %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center px-4 py-5 pl-9 xl:pl-11">
                            {{ "label.no_results"|trans }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
