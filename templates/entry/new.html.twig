{% extends 'layout.html.twig' %}

{% block top_title %}{% endblock %}


{% block content %}
    <div class="flex flex-col gap-4 sm:flex-row">
        <div class="w-full sm:w-2/3">
            <div class="p-7 chart-container rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
                <canvas data-map-target="canvas" data-map-url-value="{{ asset('js/world-countries.json') }}" data-controller="map"></canvas>
            </div>
        </div>
        <div class="w-full sm:w-1/3">
            <div class="p-7 rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
                {{ form_start(form) }}
                {{ component('TextInput', {
                    form: form.jid,
                    extraAttributes: {
                        'data-maska': '[1-7][A-Za-z]{2}[0-9]{2}[A-Za-z0-9]'
                    }
                }) }}
                {{ component('TextInput', {
                    form: form.pseudo
                }) }}
                {{ component('TextInput', {
                    form: form.age
                }) }}
                {{ component('TextArea', {
                    form: form.comment
                }) }}
                {{ component('Button', {
                    type: 'submit',
                    label: 'Save',
                    class: 'bg-primary text-white w-full'
                }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
