{% extends 'layout.html.twig' %}

{% block top_title %}{{ edition.name }}{% endblock %}

{% block buttons %}
    {{ component('Link', {
        icon: {name: 'icon-back'},
        label: 'Retour',
        action: path('app_edition_show', {id: edition.id}),
        class: 'bg-primary text-white'
    }) }}
{% endblock %}

{% block content %}
    <div class="block-container">
            {{ component('EditionForm', {
                form: form,
                edition: edition,
                cancelLink: path('app_edition_show', {id: edition.id})
            }) }}
    </div>
{% endblock %}
